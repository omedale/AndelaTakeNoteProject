<ul>
    <% for (error in errors) { %>
        <li>
           <%= error.msg %>
        </li>
    <% } %>
</ul>
<% } %>-->

</div><!--/.fluid-container-->

<!-- external javascript -->

<script src="/js/bootstrap.min.js"></script>


<script src="/js/charisma.js"></script>


</body>
</html>
